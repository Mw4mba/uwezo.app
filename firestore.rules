rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read, create, and update their own user document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can create and read their own quiz attempts.
      match /quizAttempts/{attemptId} {
        allow read, create: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Chat rules
    match /chats/{chatId} {
      // Allow a user to get/read a chat document if they are a participant.
      allow get, read: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // Allow a user to create a chat document IF their UID is one of the two participants.
      // This is crucial for starting a new chat.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

      // Messages subcollection rules
      match /messages/{messageId} {
        // Allow reading and creating messages if the user is a participant of the parent chat.
        // This uses a 'get()' to check the parent document's data.
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
