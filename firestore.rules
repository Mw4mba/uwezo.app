
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own quiz attempts.
      match /quizAttempts/{attemptId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Chat functionality rules
    match /chats/{chatId} {
      // Allow a user to read a chat document if they are a participant.
      allow get: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // Allow a user to list chats they are a part of.
      allow list: if request.auth != null && request.auth.uid in request.query.where.participants;

      // Allow authenticated users to create a new chat if they are one of the participants.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

      // Users can read and write messages in chats they are a part of.
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
  }
}
