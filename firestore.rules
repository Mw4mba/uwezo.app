rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read, write, and create their own document.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;

      // Users can only create and read their own quiz attempts.
      match /quizAttempts/{attemptId} {
        allow read, create: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Chat rules
    match /chats/{chatId} {
      // A user can read a chat document if they are a participant.
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // A user can create a chat if their UID is in the participants list and the chat ID is correctly formed.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants && chatId.split('_').length() == 2 && request.auth.uid in chatId.split('_');

      // Messages subcollection rules
      match /messages/{messageId} {
        // Allow reading and creating messages if the user is a participant of the parent chat.
        // This uses a 'get()' to check the parent document's data.
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}