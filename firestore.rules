{
  "rules": {
    "users": {
      "$uid": {
        // Allow users to read and write their own document
        ".read": "request.auth.uid == $uid",
        ".write": "request.auth.uid == $uid",

        // Allow users to manage their own subcollections
        "quizAttempts": {
          ".read": "request.auth.uid == $uid",
          ".write": "request.auth.uid == $uid"
        }
      }
    },
    "chats": {
      "$chatId": {
        // Allow read/write access to chat if the user is a participant
        ".read": "request.auth.uid in resource.data.participants",
        ".write": "request.auth.uid in resource.data.participants",

        "messages": {
          // Allow read access to messages if the user is a participant
          ".read": "get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid])",
          
          // Allow users to create messages if they are a participant
          ".create": "get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]) && request.resource.data.senderId == request.auth.uid"
        }
      }
    }
  }
}
