rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================================================
    // Helper Functions
    // =================================================================

    // Is the user authenticated?
    function isSignedIn() {
      return request.auth != null;
    }

    // Is the user the owner of the resource?
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Is the user a participant in a given chat?
    function isChatParticipant(chatId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }

    // =================================================================
    // Collection Rules
    // =================================================================

    match /users/{userId} {
      // A user can create their own user document.
      allow create: if isOwner(userId);
      
      // A user can read or update their own user document.
      allow get, update: if isOwner(userId);

      // No one can list all users or delete a user document from the client.
      allow list, delete: if false;

      // --- Subcollections for /users/{userId} ---
      
      match /quizAttempts/{attemptId} {
        // A user can create and list their own quiz attempts.
        allow create, list: if isOwner(userId);

        // No one can read a specific attempt, update, or delete it from the client.
        allow get, update, delete: if false;
      }
    }

    match /chats/{chatId} {
      // A user can create a chat if they are one of the participants in the new document.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;

      // A user can read a chat document if they are a participant.
      allow get: if isChatParticipant(chatId);

      // No one can list all chats or update/delete a chat from the client.
      allow list, update, delete: if false;
      
      // --- Subcollections for /chats/{chatId} ---

      match /messages/{messageId} {
        // A user can create and list messages if they are a participant of the parent chat.
        allow create, list: if isChatParticipant(chatId);
        
        // No one can read a specific message, update, or delete it from the client.
        allow get, update, delete: if false;
      }
    }
  }
}
