rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ðŸ”§ Helper Functions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isParticipant(participants) {
      return isSignedIn() && request.auth.uid in participants;
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ðŸ‘¤ User Profile â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /users/{userId} {
      allow read, update, delete: if isUser(userId);
      allow create: if isUser(userId) && !exists(/databases/$(database)/documents/users/$(userId));

      // â”€â”€â”€â”€â”€ ðŸŽ¯ Quiz Attempts (subcollection) â”€â”€â”€â”€â”€
      match /quizAttempts/{attemptId} {
        allow read, create: if isUser(userId);
      }
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ðŸ’¬ Chats and Messaging â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /chats/{chatId} {
      allow create: if isSignedIn(); // allow chat creation
      allow read, update, delete: if isParticipant(resource.data.participants);

      match /messages/{messageId} {
        allow read, create: if isParticipant(get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
      }
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ðŸ“„ User CV Data â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /cv_data/{userId} {
      allow create, read, update, delete: if isUser(userId);
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ðŸ“‘ NDA Agreements â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /nda_data/{userId} {
      allow create, read, update, delete: if isUser(userId);
    }

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ðŸ“¦ Future User Data Model (optional structure) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    match /userData/{userId} {
      allow read, update, delete: if isUser(userId);
      allow create: if isUser(userId) && !exists(/databases/$(database)/documents/userData/$(userId));

      match /cv/{cvId} {
        allow read, write, delete: if isUser(userId);
      }

      match /nda/{ndaId} {
        allow read, write, delete: if isUser(userId);
      }
    }
  }
}
