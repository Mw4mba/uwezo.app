
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the root and subdirectories
    match /{allPaths=**} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
    }

    // Rules for user-specific folders
    match /users/{userId} {
      // Allow read and write access only to the authenticated user
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for avatars
    match /avatars/{userId}/{fileName} {
       // Allow read access to anyone
      allow read;
       // Allow write access only to the user themselves
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for CVs
    match /cvs/{userId}/{fileName} {
       // Allow write access only to the user themselves
      allow write: if request.auth != null && request.auth.uid == userId;
       // Allow read access only to the user themselves (CVs are sensitive)
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for other documents (transcripts, portfolios)
    match /documents/{userId}/{docType}/{fileName} {
       // Allow write access only to the user themselves
      allow write: if request.auth != null && request.auth.uid == userId;
       // Allow read access only to the user themselves
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
